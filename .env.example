# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://user:pass@host/db?sslmode=require"
DIRECT_URL="postgresql://user:pass@host/db?sslmode=require"

# Local development: set to "true" to use local PostgreSQL instead of Neon
LOCAL_DB="true"
LOCAL_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/voorraadbeheer"

# NextAuth
NEXTAUTH_SECRET="generate-a-random-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# App
APP_URL="http://localhost:3000"

# Email (Resend SMTP for production)
SMTP_HOST="smtp.resend.com"
SMTP_PORT="465"
SMTP_USER="resend"
SMTP_PASS="your-resend-api-key"
EMAIL_FROM="noreply@yourdomain.com"

# Test mode: shows demo accounts on login page
NEXT_PUBLIC_TEST_MODE="false"
